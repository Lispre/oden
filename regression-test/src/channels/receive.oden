package channels/receive/main

count_down(n) = {
  if n <= 0 then "I'm slow." else count_down(n - 1)
}

main : -> ()
main() =
  let c = bidirectional_channel(2)
      r = receiver(c)
      s = sender(c)
      msg = go count_down(1000000)
  in {
    println("Running...")
    s <- "I'm fast!"
    s <- (<-msg)
    println(<-r)
    println(<-r)
  }
